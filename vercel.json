{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/sales",
            "dest": "/sales.json"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "env": {
        "NEXT_PUBLIC_API_URL": "/sales"
    },
    "dev": {
        "scripts": {
            "build": "npm run dev && npm run json-server",
            "output": {
                "public": "out"
            }
        }
    }
}